---
import Links from "./Links.astro";
import TypedText from "./TypedText.astro";
import MapIcon from "./icons/MapIcon.astro";

interface Props {
  name: string;
  description: string;
  location: string;
  imageUrl: string;
  links: Array<{ href: string; icon: string; alt: string }>;
}

const { name, description, location, imageUrl, links } = Astro.props;
---

<div
  class="container mx-auto flex flex-col md:flex-row items-center mt-20 space-y-6 md:space-y-0 md:space-x-10"
>
  <div
    class="md:flex-1 flex flex-col items-center md:items-start text-center md:text-left"
  >
    <div class="flex flex-col md:flex-row items-center md:items-start">
      <h1 class="text-7xl dark:text-white text-black bg-clip-text font-bold">
        {name}
      </h1>
    </div>
    <p
      class="text-2xl mt-4 inline-flex animate-background-shine bg-[linear-gradient(110deg,#939393,45%,#1e293b,55%,#939393)] bg-[length:250%_100%] bg-clip-text text-transparent"
    >
      <TypedText />
    </p>

    <p class="text-2xl mt-4">
      <a
        href="https://blog.alexisabel.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 dark:hover:text-white hover:text-black hover:underline transition-all duration-300"
      >
        ¡Visita mi blog! Haz click aquí
      </a>
    </p>

    <div class="flex items-center mt-4 text-gray-700 dark:text-gray-300">
      <MapIcon class="size-6 mr-2" />
      <a
        href="https://www.google.com/maps/place/Toledo/@39.84986,-4.1105338,12z/data=!4m6!3m5!1s0xd6a7179438c6461:0x30340f3be4bcc00!8m2!3d39.739778!4d-4.2333355!16zL20vMDEyNDlf?entry=ttu"
        target="_blank"
        rel="noopener noreferrer"
        class="text-black dark:text-white">{location}</a
      >
    </div>
    <div class="mt-4">
      <Links {links} />
    </div>
  </div>
  <div class="md:w-60 w-48 h-auto">
    <img
      src={imageUrl}
      class="selector object-cover rounded-full border dark:border-gray-300 transition duration-300 dark:grayscale-0 hover:grayscale-0 border-gray-500 grayscale"
      alt={name}
    />
  </div>
</div>
