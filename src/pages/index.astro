---
import Layout from "../layouts/Layout.astro";
import Theme from "../components/Theme.astro";
import SContainer from "../components/SContainer.astro";
import Presentation from "../components/Presentation.astro";
import Skills from "../components/Skills.astro";
import Experience from "../components/Experience.astro";
import About from "../components/About.astro";
import Projects from "../components/Projects.astro";
import Learning from "../components/Learning.astro";
import ExtraSkills from "../components/ExtraSkills.astro";
import TypedText from "../components/TypedText.astro";

const links = [
  { href: "https://github.com/alexisabels", icon: "GithubIcon", alt: "Github" },
  {
    href: "https://linkedin.com/in/alexisabel",
    icon: "LinkedInIcon",
    alt: "LinkedIn",
  },
  { href: "mailto:isabelsanchezalex@gmail.com", icon: "MailIcon", alt: "Mail" },
  { href: "./AlejandroIsabelCV.pdf", icon: "CVIcon", alt: "CV" },
];
---

<Layout title="Alejandro Isabel">
  <main>
    <Theme />
    <SContainer>
      <Presentation
        name="Alejandro Isabel"
        description="Desarrollador de Aplicaciones Web | Java & React"
        location="Toledo"
        imageUrl="./nueva.png"
        links={links}
      />
    </SContainer>
    <TypedText />
    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Sobre m√≠ /&gt;
      </h1>
      <About />
    </SContainer>

    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Experiencia Laboral /&gt;
      </h1>
      <Experience />
    </SContainer>

    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Main Skills /&gt;
      </h1>
      <Skills />
    </SContainer>

    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Tools & Platforms /&gt;
      </h1>
      <ExtraSkills />
    </SContainer>

    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Proyectos /&gt;
      </h1>
      <Projects />
    </SContainer>

    <SContainer>
      <h1 class="text-4xl font-bold select-none dark:text-white text-gray-900">
        &lt;Aprendiendo /&gt;
      </h1>
      <Learning />
    </SContainer>
  </main>
</Layout>
